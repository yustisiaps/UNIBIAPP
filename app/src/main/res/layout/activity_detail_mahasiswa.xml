<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DetailMahasiswaActivity">
    <RelativeLayout
        android:id="@+id/data_diri"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">
        <ImageView
            android:id="@+id/iv_item_photo"
            android:layout_width="150dp"
            android:layout_height="220dp"
            android:layout_marginBottom="4dp"
            android:scaleType="centerCrop"
            tools:src="@color/colorAccent" />

        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/iv_item_photo"
            android:layout_toRightOf="@id/iv_item_photo"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="@string/nama_mahasiswa" />
        <ImageView
            android:id="@+id/email"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_nama"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@id/iv_item_photo"
            android:src="@drawable/ic_email_black_24dp"
            />

        <TextView
            android:id="@+id/tv_item_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_nama"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/email"
            android:textSize="12sp"
            tools:text="email" />

        <ImageView
            android:id="@+id/telp"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/email"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@id/iv_item_photo"
            android:src="@drawable/ic_phone_black_24dp"
            />

        <TextView
            android:id="@+id/tv_item_telp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_email"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/email"
            android:textSize="12sp"
            tools:text="telpon" />

        <ImageView
            android:id="@+id/univ"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/telp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@id/iv_item_photo"
            android:src="@drawable/ic_school_black_24dp"
            />

        <TextView
            android:id="@+id/tv_item_univ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_telp"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/email"
            android:textSize="12sp"
            android:text="@string/universitas" />

        <ImageView
            android:id="@+id/prodi"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/univ"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_toEndOf="@id/iv_item_photo"
            android:src="@drawable/ic_important_devices_black_24dp"
            />

        <TextView
            android:id="@+id/tv_item_prodi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_univ"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@id/email"
            android:textSize="12sp"
            android:text="@string/prodi"/>

        <LinearLayout
            android:id="@+id/layout_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_item_photo"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_item_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </RelativeLayout>

</layout>